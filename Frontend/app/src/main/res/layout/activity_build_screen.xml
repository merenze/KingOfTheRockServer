<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BuildScreen">

    <Button
        android:id="@+id/activity_build_screen_button_structure_town"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:text="Town"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.048"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.115" />

    <Button
        android:id="@+id/activity_build_screen_button_structure_house"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:text="House"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.048"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/activity_build_screen_button_structure_town"
        app:layout_constraintVertical_bias="0.017" />

    <Button
        android:id="@+id/activity_build_screen_button_structure_mine"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:text="Mine"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.048"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/activity_build_screen_button_structure_house"
        app:layout_constraintVertical_bias="0.025" />

    <Button
        android:id="@+id/activity_build_screen_button_structure_lumberyard"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:text="Lumberyard"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.048"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/activity_build_screen_button_structure_mine"
        app:layout_constraintVertical_bias="0.033" />

    <Button
        android:id="@+id/activity_build_screen_button_structure_farm"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:text="Farm"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.051"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/activity_build_screen_button_structure_lumberyard"
        app:layout_constraintVertical_bias="0.067" />

    <Button
        android:id="@+id/activity_build_screen_button_structure_well"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:text="Well"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.051"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/activity_build_screen_button_structure_farm"
        app:layout_constraintVertical_bias="0.333" />

    <TextView
        android:id="@+id/activity_build_screen_tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="B U I L D"
        android:textSize="34sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.023" />
</androidx.constraintlayout.widget.ConstraintLayout>